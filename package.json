{
  "name": "math-helper",
  "version": "0.1.0",
  "description": "高等数学可视化学习工具",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite\" \"electron .\"",
    "electron:build": "vue-tsc && vite build && electron-builder",
    "test": "vitest",
    "lint": "eslint src --ext .vue,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{vue,ts,tsx,scss}\""
  },
  "dependencies": {
    "axios": "^1.6.0",
    "d3": "^7.8.0",
    "echarts": "^5.4.0",
    "element-plus": "^2.4.0",
    "katex": "^0.16.0",
    "marked": "^17.0.1",
    "mathjs": "^12.2.0",
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.0",
    "@types/katex": "^0.16.0",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/tsconfig": "^0.5.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "vue-tsc": "^1.8.0"
  },
  "author": "DuncanYoung",
  "license": "MIT"
}
